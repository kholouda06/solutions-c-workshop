include <stdio.h>

int main() {
    float celsius;
    printf("Entrez la température en Celsius : ");
    scanf("%f", &celsius);
    if (celsius < 0) {
        printf("À %.2f°C, l'eau est à l'état solide (glace).\n", celsius);
    } else if (celsius >= 0 && celsius < 100) {
        printf("À %.2f°C, l'eau est à l'état liquide.\n", celsius);
    } else {
        printf("À %.2f°C, l'eau est à l'état gazeux (vapeur).\n", celsius);
    }

    return 0;
}